@page
@model MegaDesk9Group.Pages.DeskQuotes.CreateModel

@{
    ViewData["Title"] = "Add New Quote";
}
<main>
    <h2>Add New Quote</h2>

    <h4>Fill in all fields</h4>
    <hr />
    <div class="row">
        <form method="post">
            <fieldset>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="DeskQuote.FirstName" class="control-label"></label>
                    <input asp-for="DeskQuote.FirstName" class="form-control" />
                    <span asp-validation-for="DeskQuote.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.LastName" class="control-label"></label>
                    <input asp-for="DeskQuote.LastName" class="form-control" />
                    <span asp-validation-for="DeskQuote.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.QuoteDate" class="control-label"></label>
                    <input asp-for="DeskQuote.QuoteDate" class="form-control" />
                    <span asp-validation-for="DeskQuote.QuoteDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.RushOrder" class="control-label"></label>
                    <select asp-for="DeskQuote.RushOrder" class="form-control">
                        <option value="">Normal Delivery</option>
                        <option value="3">3 Day Delivery</option>
                        <option value="5">5 Day Delivery</option>
                        <option value="7">7 Day Delivery</option>
                    </select>
                    <span asp-validation-for="DeskQuote.RushOrder" class="text-danger"></span>
                </div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <label asp-for="DeskQuote.Width" class="control-label"></label>
                    <input asp-for="DeskQuote.Width" class="form-control" />
                    <span asp-validation-for="DeskQuote.Width" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.Depth" class="control-label"></label>
                    <input asp-for="DeskQuote.Depth" class="form-control" />
                    <span asp-validation-for="DeskQuote.Depth" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.DrawerCount" class="control-label"></label>
                    <select asp-for="DeskQuote.DrawerCount" class="form-control">
                        @for (int i = 0; i < 8; i++)
                        {
                            <option value="@i">@i</option>}
                    </select>
                    <span asp-validation-for="DeskQuote.DrawerCount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeskQuote.SurfaceMaterial" class="control-label"></label><br/>

                    <span class="radio"><input type="radio" asp-for="DeskQuote.SurfaceMaterial" value="@Model.MaterialList[0]" checked> @Model.MaterialList[0] <img src="~/images/pine.png"></span>
                    <span class="radio"><input type="radio" asp-for="DeskQuote.SurfaceMaterial" value="@Model.MaterialList[1]"> @Model.MaterialList[1] <img src="~/images/laminate.png"></span> 
                    <span class="radio"><input type="radio" asp-for="DeskQuote.SurfaceMaterial" value="@Model.MaterialList[2]"> @Model.MaterialList[2] <img src="~/images/veneer.png" /></span>
                    <span class="radio"><input type="radio" asp-for="DeskQuote.SurfaceMaterial" value="@Model.MaterialList[3]"> @Model.MaterialList[3] <img src="~/images/oak.png"></span>
                    <span class="radio"><input type="radio" asp-for="DeskQuote.SurfaceMaterial" value="@Model.MaterialList[4]"> @Model.MaterialList[4] <img src="~/images/rosewood.png"></span>
                    <span asp-validation-for="DeskQuote.SurfaceMaterial" class="text-danger"></span>
</div>
            </fieldset>
            <fieldset>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default button " />
                </div>
            </fieldset>
            </form>

    </div>

    <div>
        <a asp-page="Index" class="button3">Back to List</a>
    </div>
</main>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
